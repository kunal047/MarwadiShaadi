<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_fdetails_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/MyToolbartheme"
        android:titleTextColor="@android:color/white"
        >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_father_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="#fff"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Father's Name"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#747474"
                        android:textSize="16dp"
                        />

                    <Spinner
                        android:id="@+id/edit_father_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:entries="@array/father_occupation_array"
                        android:padding="10dp"
                        android:textSize="20dp"/>

                    <EditText
                        android:id="@+id/edit_father_occupation_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="#fff"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Father's Occupation Details"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#747474"
                        android:textSize="16dp"
                        />

                    <Spinner
                        android:id="@+id/edit_family_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:entries="@array/fstatus_array"
                        android:padding="10dp"
                        android:textSize="20dp"/>

                    <Spinner
                        android:id="@+id/edit_family_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:entries="@array/ftype_array"
                        android:padding="10dp"
                        android:textSize="20dp"/>

                    <Spinner
                        android:id="@+id/edit_family_values"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:entries="@array/fvalues_array"
                        android:padding="10dp"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/edit_native_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/signup_location"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Native Place"
                        android:inputType="textPersonName"
                        android:padding="6dp"
                        android:textColorHint="#747474"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:id="@+id/edit_subcaste"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/signup_subcaste"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Subcaste ( Shwetambar )"
                        android:inputType="textPersonName"
                        android:padding="6dp"
                        android:textColorHint="#747474"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:id="@+id/edit_grandfather_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/signup_grandpa"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Grandfather's Name"
                        android:inputType="textPersonName"
                        android:padding="6dp"
                        android:textColorHint="#747474"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:id="@+id/edit_mama_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="#fff"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Mama's Surname"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#747474"
                        android:textSize="16dp"
                        />


                    <Button
                        android:id="@+id/update_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorPrimary"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>