<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#ffede9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/coupon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="top|left"
            android:layout_margin="8dp"
            android:background="@layout/button_border_corner_circle_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Coupon Code"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14dp"
            />

        <Button
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="top|right"
            android:layout_margin="8dp"
            android:background="@layout/button_border_corner_circle_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                fontPath="fonts/OpenSans-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Maheshwari"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                tools:ignore="MissingPrefix"/>

                            <TextView
                                android:id="@+id/g1reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="end"
                                android:text="Clear"
                                android:textColor="#2d2d2d"
                                android:textSize="16dp"/>

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/gr1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Months - ₹1000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Months - ₹2000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Months - ₹2500"
                                android:textSize="12dp"/>


                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">


                            <TextView
                                fontPath="fonts/OpenSans-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Agarwal"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                tools:ignore="MissingPrefix"/>

                            <TextView
                                android:id="@+id/g3reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="end"
                                android:text="Clear"
                                android:textColor="#2d2d2d"
                                android:textSize="16dp"/>

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/gr3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Months - ₹1000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Months - ₹2000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Months - ₹2500"
                                android:textSize="12dp"/>


                        </RadioGroup>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                fontPath="fonts/OpenSans-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Jain"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                tools:ignore="MissingPrefix"/>

                            <TextView
                                android:id="@+id/g2reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="end"
                                android:text="Clear"
                                android:textColor="#2d2d2d"
                                android:textSize="16dp"/>
                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/gr2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Months - ₹1000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Months - ₹2000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Months - ₹2500"
                                android:textSize="12dp"/>


                        </RadioGroup>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                fontPath="fonts/OpenSans-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Khandelwal"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                tools:ignore="MissingPrefix"/>

                            <TextView
                                android:id="@+id/g4reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="end"
                                android:text="Clear"
                                android:textColor="#2d2d2d"
                                android:textSize="16dp"/>
                        </LinearLayout>


                        <RadioGroup
                            android:id="@+id/gr4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Months - ₹1000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Months - ₹2000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Months - 2500"
                                android:textSize="12dp"/>
                        </RadioGroup>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                fontPath="fonts/OpenSans-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Others"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                tools:ignore="MissingPrefix"/>

                            <TextView
                                android:id="@+id/g5reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="end"
                                android:text="Clear"
                                android:textColor="#2d2d2d"
                                android:textSize="16dp"/>

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/gr5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Months - ₹1000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Months - ₹2000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Months - ₹2500"
                                android:textSize="12dp"/>
                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">


                            <TextView
                                fontPath="fonts/OpenSans-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="All"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                tools:ignore="MissingPrefix"/>

                            <TextView
                                android:id="@+id/g6reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="end"
                                android:text="Clear"
                                android:textColor="#2d2d2d"
                                android:textSize="16dp"/>

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/gr6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Months - ₹5000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Months - ₹10000"
                                android:textSize="12dp"/>

                            <RadioButton
                                android:id="@+id/radio18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Months - ₹12500"
                                android:textSize="12dp"/>

                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="6dp"
                android:text="Total:"
                android:textColor="#ffffff"
                android:textSize="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="₹"
                android:textColor="#fff"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:text="NEXT"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                />

        </FrameLayout>

    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/membership_toolbar"
        android:layout_width="match_parent"
        android:titleTextColor="@android:color/white"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/MyToolbartheme"
        android:elevation="8dp"
        >
    </android.support.v7.widget.Toolbar>
</LinearLayout>