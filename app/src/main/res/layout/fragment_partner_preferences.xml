<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.8"
                        android:text="Preferences"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/partner_prefs_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_user_edit"
                        android:gravity="end|center_vertical"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_height"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />


                <LinearLayout
                    android:id="@+id/complexionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:src="@drawable/profile_complexion"
                        />

                    <TextView
                        android:id="@+id/complexion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#2d2d2d"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/build"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_built"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/physical_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_physical_status"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_location"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/highest_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_edu"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/occup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_designation"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/marital_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_marital"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/annual_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_income"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:background="@layout/button_border_corner_circle_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="View Similar Profiles"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>