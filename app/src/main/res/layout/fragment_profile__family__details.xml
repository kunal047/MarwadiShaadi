<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/family_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.8"
                        android:text="Family"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/family_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_user_edit"
                        android:gravity="end|center_vertical"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/father_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/father_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_designation"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/father_occupation_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_occupation"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/family_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_action_profile_status"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/family_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_action_profile_value"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/native_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_location"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/subcaste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_caste"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/grandpa_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/mama_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.8"
                        android:text="Relatives"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/relatives_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_user_edit"
                        android:gravity="end|center_vertical"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/relation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/relative_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/relative_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_designation"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/relative_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_location"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/relative_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_contact"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@layout/button_border_corner_circle_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="View Similar Profiles"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>