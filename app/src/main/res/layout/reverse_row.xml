<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


    <ImageView
        android:id="@+id/user_profile_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_drawer"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_profile_img"
        android:layout_marginTop="125dp"
        android:background="#66000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="true"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/user_profile_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/user_profile_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/user_profile_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/showTextOnPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_profile_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:text="Upload your \n photo to view"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"/>


</RelativeLayout>
